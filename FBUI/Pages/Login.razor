@page "/login"
@inject IAuthenticationService AuthService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Sign in - FB App</PageTitle>

<div class="flex items-center justify-center min-h-[60vh]">
    <div class="w-full max-w-sm">
        <div class="text-center mb-10">
            <h1 class="text-2xl font-light tracking-tight text-neutral-100">Sign in</h1>
            <p class="text-sm text-neutral-400 mt-2">Welcome back</p>
        </div>

        <EditForm Model="@_model" OnValidSubmit="HandleLoginAsync" FormName="LoginForm">
            <DataAnnotationsValidator />

            <div class="space-y-5">
                <div>
                    <FluentTextField 
                        @bind-Value="_model.Email"
                        Immediate="true"
                        Label="Email" 
                        TextFieldType="TextFieldType.Email"
                        Placeholder="you@example.com"
                        Style="width: 100%;"
                        Required="true" />
                    <ValidationMessage For="@(() => _model.Email)" class="text-red-400 text-xs mt-1" />
                </div>

                <div>
                    <FluentTextField 
                        @bind-Value="_model.Password"
                        Immediate="true"
                        Label="Password" 
                        TextFieldType="TextFieldType.Password"
                        Placeholder="••••••••"
                        Style="width: 100%;"
                        Required="true" />
                    <ValidationMessage For="@(() => _model.Password)" class="text-red-400 text-xs mt-1" />
                </div>

                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <p class="text-sm text-red-400">@_errorMessage</p>
                }

                <FluentButton 
                    Type="ButtonType.Submit" 
                    Appearance="Appearance.Accent" 
                    Loading="@_isLoading"
                    Style="width: 100%;">
                    @(_isLoading ? "Signing in..." : "Sign in")
                </FluentButton>
            </div>
        </EditForm>

        <div class="mt-8 text-center">
            <p class="text-sm text-neutral-400">
                Don't have an account? 
                <FluentAnchor Href="/register" Appearance="Appearance.Hypertext">
                    Register
                </FluentAnchor>
            </p>
        </div>
    </div>
</div>

@code {
    private readonly LoginModel _model = new();
    private bool _isLoading;
    private string? _errorMessage;

    private async Task HandleLoginAsync()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var result = await AuthService.LoginAsync(_model.Email, _model.Password);

            if (result.IsSuccess)
            {
                ToastService.ShowSuccess("Welcome back!");
                Navigation.NavigateTo("/movies");
            }
            else
            {
                _errorMessage = result.Status == Ardalis.Result.ResultStatus.Unauthorized 
                    ? "Invalid email or password" 
                    : string.Join(", ", result.Errors);
            }
        }
        catch (ApiException<HttpValidationProblemDetails> ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}
