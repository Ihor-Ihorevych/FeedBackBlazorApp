@page "/register"
@inject IAuthenticationService AuthService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Register - FB App</PageTitle>

<div class="flex items-center justify-center min-h-[60vh]">
    <div class="w-full max-w-sm">
        <div class="text-center mb-10">
            <h1 class="text-2xl font-light tracking-tight text-neutral-100">Create account</h1>
            <p class="text-sm text-neutral-400 mt-2">Join FB App</p>
        </div>

        <EditForm Model="@_model" OnValidSubmit="HandleRegisterAsync" FormName="RegisterForm">
            <DataAnnotationsValidator />

            <div class="space-y-4">
                <div>
                    <FluentTextField 
                        @bind-Value="_model.UserName" 
                        Immediate="true"
                        Label="Username" 
                        Placeholder="johndoe"
                        Style="width: 100%;"
                        Required="true" />
                    <ValidationMessage For="@(() => _model.UserName)" class="text-red-400 text-xs mt-1" />
                </div>

                <div>
                    <FluentTextField 
                        @bind-Value="_model.Email" 
                        Immediate="true"
                        Label="Email" 
                        TextFieldType="TextFieldType.Email"
                        Placeholder="you@example.com"
                        Style="width: 100%;"
                        Required="true" />
                    <ValidationMessage For="@(() => _model.Email)" class="text-red-400 text-xs mt-1" />
                </div>

                <div>
                    <FluentTextField 
                        @bind-Value="_model.Password" 
                        Immediate="true"
                        Label="Password" 
                        TextFieldType="TextFieldType.Password"
                        Placeholder="••••••••"
                        Style="width: 100%;"
                        Required="true" />
                    <ValidationMessage For="@(() => _model.Password)" class="text-red-400 text-xs mt-1" />
                </div>

                <div>
                    <FluentTextField 
                        @bind-Value="_model.ConfirmPassword" 
                        Immediate="true"
                        Label="Confirm Password" 
                        TextFieldType="TextFieldType.Password"
                        Placeholder="••••••••"
                        Style="width: 100%;"
                        Required="true" />
                    <ValidationMessage For="@(() => _model.ConfirmPassword)" class="text-red-400 text-xs mt-1" />
                </div>

                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <p class="text-sm text-red-400">@_errorMessage</p>
                }

                <FluentButton 
                    Type="ButtonType.Submit" 
                    Appearance="Appearance.Accent" 
                    Loading="@_isLoading"
                    Style="width: 100%;">
                    @(_isLoading ? "Creating account..." : "Create account")
                </FluentButton>
            </div>
        </EditForm>

        <div class="mt-8 text-center">
            <p class="text-sm text-neutral-400">
                Already have an account? 
                <FluentAnchor Href="/login" Appearance="Appearance.Hypertext">
                    Sign in
                </FluentAnchor>
            </p>
        </div>
    </div>
</div>

@code {
    private readonly RegisterModel _model = new();
    private bool _isLoading;
    private string? _errorMessage;

    private async Task HandleRegisterAsync()
    {
        _isLoading = true;
        _errorMessage = null;

        if (_model.Password != _model.ConfirmPassword)
        {
            _errorMessage = "Passwords do not match.";
            _isLoading = false;
            return;
        }

        try
        {
            var result = await AuthService.RegisterAsync(
                _model.UserName, 
                _model.Email, 
                _model.Password);

            if (result.IsSuccess)
            {
                ToastService.ShowSuccess("Account created successfully! Please login.");
                Navigation.NavigateTo("/login");
            }
            else
            {
                _errorMessage = string.Join(", ", result.Errors);
            }
        }
        catch (ApiException<HttpValidationProblemDetails> ex)
        {
            _errorMessage = ex.GetValidationErrors();
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private sealed class RegisterModel
    {
        public string UserName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
